#include <iostream>
#include <string>

using namespace std;

class Date {
private:
	int day, month, year;
	int mon[12] {31, 28, 31, 30, 31, 30, 31, 31, 30, 31, 30, 31};

protected:
	bool validate_date(int day, int month, int year) {
		if (year < 0) {
			return false;
			cout << "\n\tYear is not valid." << endl;
		}
		//check month
		if (month >= 1 && month <= 12) {
			//check days
			if ((day >= 1 && day <= 31) && (month == 1 || month == 3 || month == 5 || month == 7 || month == 8 || month == 10 || month == 12))
				return true;
			else if ((day >= 1 && day <= 30) && (month == 4 || month == 6 || month == 9 || month == 11))
				return true;
			else if ((day >= 1 && day <= 28) && (month == 2))
				return true;
			else if (day == 29 && month == 2 && (year % 400 == 0 || (year % 4 == 0 && year % 100 != 0)))
				return true;
			else {
				return false;
				cout << "\n\tDay is not valid." << endl;
			}
		}
		else {
			return false;
			cout << "\n\tMonth is not valid." << endl;
		}
	}

public:
	Date(int day, int month, int year) {
		if (validate_date(day, month, year)) {
			this->day = day;
			this->month = month;
			this->year = year;
		}
		else {
			cout << "\n\tYou typed the wrong date" <<
				"\n\tIt'll be set to 01.03.2023" << endl;
			this->day = 1;
			this->month = 3;
			this->year = 2023;
		}
	}
	~Date() {
		cout << "\n\n\tObject was deleted" << endl;
	}
	string Get_date() {
		string date;
		date = (to_string(day).length() == 1 ? "0" + to_string(day) : to_string(day)) + "/";
		date += (to_string(month).length() == 1 ? "0" + to_string(month) : to_string(month)) + "/";
		date += to_string(year);
		return date;
	}
	void Set_day(int day) {
		if (day < 0 || day>31) {
			cout << "\n\tYou typed the wrong month" << endl;
			return;
		}
		if (day > mon[month - 1]) {
			day = mon[month - 1];
		}
		this->day = day;
	}
	void Set_month(int month) {
		if (month < 0 || month>12) {
			cout << "\n\tYou typed the wrong month" << endl;
			return;
		}
		if (day > mon[month-1]) {
			day = mon[month-1];
		}
		this->month = month;
	}
	void Set_year(int year) {
		if (year < 0) {
			cout << "\n\tYou typed the wrong month" << endl;
			return;
		}

		this->year = year;
	}
	Date& operator--() {
		day--;
		if (day == 0) {
			month--;
			day = mon[month - 1];
			if (month == 0) {
				month = 12;
				day = 31;
				year--;
			}
		}
		return *this;
	}
};

int main() {

	Date date(31,3,2043);

	cout << date.Get_date() << endl;

	date.Set_month(2);

	cout << date.Get_date() << endl;

	date.Set_day(30);

	cout << date.Get_date() << endl;

	/*for (int i = 0; i < 90; i++)
	{
		--date;
		cout << date.Get_date() << endl;
	}*/

	--date;
	cout << date.Get_date();

	return 0;
}
